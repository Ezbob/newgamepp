{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build and run",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "windows": {
        // tested with powershell
        "type": "shell",
        "command": ".\\build\\Debug\\main.exe"
      },
      "linux": {
        "type": "shell",
        "command": "./build/main"
      },
      "dependsOn": [
        "build"
      ]
    },
    {
      "label": "build",
      "group": "build",
      "windows": {
        // tested with powershell
        "type": "shell",
        "command": "cmake --build build"
      },
      "linux": {
        "type": "shell",
        "command": "cmake --build build"
      }
    },
    {
      "label": "setup",
      "group": "build",
      "windows": {
        "type": "shell",
        "command": "cmake -DCMAKE_TOOLCHAIN_FILE=${env:VCPKG_CMAKE_TOOLCHAIN} -S . -B build"
      },
      "linux": {
        "type": "shell",
        "command": "cmake -DCMAKE_TOOLCHAIN_FILE=${env:VCPKG_CMAKE_TOOLCHAIN} -S . -B build"
      }
    },
    {
      "label": "clean",
      "group": "build",
      "windows": {
        "type": "shell",
        "command": "rmdir -Force build"
      },
      "linux": {
        "type": "shell",
        "command": "rm -rf build"
      }
    }
  ]
}